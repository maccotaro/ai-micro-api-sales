# ai-micro-api-sales/.env.test
# テスト用環境変数
# 本番環境とは別ポートを使用

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5433/salesdb
TEST_DATABASE_URL=postgresql://postgres:password@localhost:5433/salesdb

# Redis
REDIS_URL=redis://localhost:6380
TEST_REDIS_URL=redis://localhost:6380

# JWT Verification
JWKS_URL=http://localhost:8002/.well-known/jwks.json
JWT_ISS=https://test.example.com
JWT_AUD=test-api

# External Services (テスト時はモック)
AUTH_SERVICE_URL=http://localhost:8002
ADMIN_SERVICE_URL=http://localhost:8003

# Neo4j (テスト時は通常不要)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=test_password

# Ollama (テスト時はモック)
OLLAMA_BASE_URL=http://localhost:11434

# Logging
LOG_LEVEL=DEBUG
